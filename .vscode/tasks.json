{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Watch VSCode Extension",
      "type": "npm",
      "script": "watch",
      "path": ".vscode/extensions/claude-mcp-vscode/",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "panel": "dedicated"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
